<section style="min-height: 100vh;">
  <div class="container ">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Edit Your Profile</p>

                <form action="/edit-profile" method="post" class="mx-1 mx-md-4" enctype="multipart/form-data">
                  <div class=" d-flex" style="padding-left: 6em; margin-bottom: 1em;">
                    <img id="profileImage" class="img-center  " src="/users-image/{{user._id}}.jpeg" alt="" width="100" height="100" style=" border-radius: 50rem;">
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4"  >
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <label  class="form-label"style="margin-left: 5.3em; ">Your Profile Photo</label>
                      <input name="profileImage" type="file" class="form-control" onchange=" viewProfileImage(event) " />
                      
                      
                    </div>
                  </div>
                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      <input name="Name" type="text" id="form3Example1c" class="form-control" placeholder="Enter your name" value="{{user.Name}}" required/>
                      <label  class="form-label" for="form3Example1c">Your Name</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div  class="form-outline flex-fill mb-0">
                      <input name="Email" type="email" id="form3Example3c" class="form-control" placeholder="Enter a valid Email adress" value="{{user.Email}}" required/>
                      <label class="form-label" for="form3Example3c">Your Email</label>
                    </div>
                  </div>

                  <div class="d-flex flex-row align-items-center mb-4">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div  class="form-outline flex-fill mb-0">
                      <input name="Mobile" type="text" id="form3Example5c" class="form-control" placeholder="Enter Mobile No eg:+91 9876543210" value="{{user.Mobile}}" required/>
                      <label class="form-label" for="form3Example5c">Your Mobile Number</label>
                    </div>
                  </div>
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button  type="submit"class="btn btn-primary btn-lg">Save changes</button>
                  </div>
                  
                </div>
                </form>
                
              </div>
              
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
    function viewProfileImage(event){
        document.getElementById('profileImage').src=URL.createObjectURL(event.target.files[0])
    }
</script>

